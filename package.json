{
	"name": "aio-base",
	"version": "1.0.0",
	"description": "An all-in-one base for node, typescript, postgres and react. Using docker to bundle everything up.",
	"main": "index.js",
	"repository": "git@github.com:julianinsua/aio-base.git",
	"author": "Julian Insua <jii.julious@gmail.com>",
	"license": "MIT",
	"scripts": {
		"build": "rm -rf dist && ttsc && cp -R ./src/db/migrations/ ./dist/db/",
		"dev": "NODE_PATH=src nodemon --watch src -e ts --exec ts-node -r dotenv/config src/index.ts",
		"debug": "NODE_PATH=src node -r ts-node/register -r dotenv/config --inspect-brk src/index.ts",
		"start": "node dist/index.js",
		"test": "jest --coverage"
	},
	"dependencies": {
		"@prisma/client": "5.0.0",
		"@types/bcrypt": "^5.0.0",
		"@types/jest": "^29.5.2",
		"@types/jsonwebtoken": "^9.0.2",
		"@types/node": "^20.2.5",
		"@types/uuid": "^9.0.2",
		"@types/validator": "^13.7.17",
		"@typescript-eslint/eslint-plugin": "^5.50.0",
		"@typescript-eslint/parser": "^5.59.9",
		"bcrypt": "^5.1.0",
		"dotenv": "^16.3.1",
		"eslint": "^8.0.1",
		"eslint-config-prettier": "^8.8.0",
		"eslint-config-standard-with-typescript": "^36.1.0",
		"eslint-plugin-import": "^2.28.0",
		"eslint-plugin-n": "^15.0.0 ",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-promise": "^6.0.0",
		"fastify": "^4.20.0",
		"jest": "^29.5.0",
		"jsonwebtoken": "^9.0.1",
		"node-postgres": "^0.6.2",
		"nodemon": "^3.0.1",
		"postgres-migrations": "^5.3.0",
		"prettier": "^2.8.8",
		"prisma": "^5.0.0",
		"ts-jest": "^29.1.0",
		"ts-node": "^10.9.1",
		"ttsc": "^0.3.1",
		"typescript": "*",
		"typescript-transform-paths": "^3.4.6",
		"uuid": "^9.0.0",
		"validator": "^13.9.0"
	}
}
